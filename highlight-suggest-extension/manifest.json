{
  "manifest_version": 3,
  "name": "PDF Research Assistant",
  "version": "1.0",
  "description": "Upload PDFs, highlight text, and chat with AI assistant",
  "permissions": ["storage", "activeTab", "contextMenus"],
  "host_permissions": ["http://localhost:8000/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PDF Research Assistant"
  },
  "icons": {
    "16": "icons8-message-bot-100.png",
    "48": "icons8-message-bot-100.png",
    "128": "icons8-message-bot-100.png"
  }
}
